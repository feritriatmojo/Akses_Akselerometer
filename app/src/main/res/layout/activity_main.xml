<?xml version="1.0" encoding="utf-8"?>
<!--TODO 1 : Menggunakan Relative Layout untuk penataan yang menempatkan widget-widget didalamnya seperti layer-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#817C7C"
    tools:context=".MainActivity">

    <!--TODO 2 : Mengatur dan Menampilkan Gambar/Image Akselero pada aplikasi-->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="368dp"
        android:layout_height="346dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="374dp"
        app:srcCompat="@drawable/acc" />

    <!--TODO 3 : Mengatur dan Menampilkan tv square pada aplikasi-->
    <TextView
        android:id="@+id/tv_square"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="111dp"
        android:background="#1E319A"
        android:gravity="center"
        android:text="HAI"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!--TODO 4 : Mengatur dan Menampilkan teks "Gerakkan Smartphone Anda" pada aplikasi-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="341dp"
        android:text="Gerakkan Smartphone Anda"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>